- @title = "Dashboard"

.page-box.last-slide.background-p50-grey.center-vertically-xs-sm
  .container
    - if current_user.refused?
      .jumbotron.jumbotron-white
        %h2 Refused to join Study
        %p You refused to join the SleepINNOVATE study.
        %p
          Please
          = link_to "notify the person", contact_path
          in charge of this research study in writing.
    - elsif current_user.withdrawn?
      .jumbotron.jumbotron-white
        %h2 Withdrawn from Study
        %p You have withdrawn from the SleepINNOVATE study.
        %p
          Please
          = link_to "notify the person", contact_path
          in charge of this research study in writing.
    - elsif current_user.consented?
      .row
        - if current_user.subject_events.blank?
          .col-lg-4.col-buffer= render "cards/no_surveys"
        - elsif current_user.next_survey
          .col-lg-4.col-buffer= render "cards/ongoing", event_design: current_user.next_survey
        - else
          .col-lg-4.col-buffer= render "cards/completed", subject_event: current_user.subject_events.first

        - if current_user.brain_surveys_completed?
          .col-lg-4.col-buffer= render "cards/brain_completed"
        - elsif current_user.brain_surveys_started?
          .col-lg-4.col-buffer= render "cards/brain_started"
        - elsif current_user.brain_surveys_step?
          .col-lg-4.col-buffer= render "cards/brain"

        - if current_user.biobank_registration_completed?
          .col-lg-4.col-buffer= render "cards/biobank_completed"
        - elsif current_user.biobank_registration_started?
          .col-lg-4.col-buffer= render "cards/biobank_started"
        - elsif current_user.biobank_registration_step?
          .col-lg-4.col-buffer= render "cards/biobank"

      - if current_user.whats_next?
        .text-center
          Congrats, you are all done!
          = link_to "What's next?", whats_next_path

      - if false
        %hr

        %p
          Your beautiful signature.

        = image_tag signature_path, style: "max-width: 100%; height: auto;"

        %p
          = link_to "View Consent", consent_path

      - if false
        .row
          .col-lg-4.col-buffer= render "cards/completed", subject_event: current_user.subject_events.first
          .col-lg-4.col-buffer= render "cards/test_my_brain_completed"
          .col-lg-4.col-buffer= render "cards/biobank_completed"
          - if false
            .col-lg-4.col-buffer= render "cards/awards"
            .col-lg-4.col-buffer= render "cards/get_in_touch"
            .col-lg-4.col-buffer= render "cards/consents"
            .col-lg-4.col-buffer= render "cards/coming_soon", title: "3 Month Phonecall"

    - else
      .jumbotron.jumbotron-white
        %h2 Step 1: Consent
        %p
          To get started,
          = link_to "read the consent", consent_path
          for SleepINNOVATE.
