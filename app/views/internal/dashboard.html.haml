- @title = "Dashboard"

.page-box.last-slide.background-p50-grey.center-vertically-xs-sm
  .container
    - if current_user.refused?
      .jumbotron.jumbotron-white
        %h2 Refused to join Study
        %p You refused to join the SleepINNOVATE study.
        %p
          Please
          = link_to "notify the person", contact_path
          in charge of this research study in writing.
    - elsif current_user.withdrawn?
      .jumbotron.jumbotron-white
        %h2 Withdrawn from Study
        %p You have withdrawn from the SleepINNOVATE study.
        %p
          Please
          = link_to "notify the person", contact_path
          in charge of this research study in writing.
    - elsif current_user.unconsented?
      .jumbotron.jumbotron-white
        %h2 Consent to study
        %p
          Please
          = link_to "read through the consent", consent_path
          to start surveys on the
          = render "layouts/logo"
          study.
    - elsif !current_user.profile_complete?
      .jumbotron.jumbotron-white
        %h2 Complete your profile
        %p
          Please
          = link_to "complete your profile", profile_complete_path
          to start surveys on the
          = render "layouts/logo"
          study.
    - else
      .card-deck
        - if current_user.subject_events.blank?
          = render "cards/no_surveys"
        - elsif current_user.next_survey
          = render "cards/ongoing", event_design: current_user.next_survey
        - else
          = render "cards/completed", subject_event: current_user.subject_events.first

        = render "cards/parking" if current_user.parking_voucher?

        - if current_user.brain_surveys_completed?
          = render "cards/brain_completed"
        - elsif current_user.brain_surveys_started?
          = render "cards/brain_started"
        - elsif current_user.brain_surveys_viewable?
          = render "cards/brain"
        - else
          = render "cards/brain_starting_soon"

        - if current_user.parking_voucher?
          -# Nothing
        - elsif current_user.biobank_registration_completed?
          = render "cards/biobank_completed"
        - elsif current_user.biobank_registration_started?
          = render "cards/biobank_started"
        - elsif current_user.biobank_registration_step?
          = render "cards/biobank"

      - if current_user.whats_next?
        .text-center
          Congrats, you are all done!
          = link_to "What's next?", whats_next_path
