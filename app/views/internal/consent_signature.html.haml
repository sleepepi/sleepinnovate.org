- @title = "Consent"

.page-box.last-slide.background-p50-grey
  .consent.consent-signature-page
    .float-right
      %small
        = link_to consent_path do
          %i.fa.fa-caret-left
        %span Page 2 of 2
    = render "consent/14_authorization"
    = form_tag consent_path, method: :post, id: "consent-form" do
      = hidden_field_tag :data_uri

      #signature-pad.signature-form
        .float-right{ style: "padding-right: 20px;margin-top: -10px;" }
          = link_to "#", data: { action: "clear" }, class: "small" do
            %i.fa.fa-eraser
            %span Clear
            %span.d-none.d-sm-inline Signature
        .m-signature-pad
          %div{ class: "m-signature-pad--body" }
            %div{ style: "margin-top: 15px;margin-left: 15px;" }
              %small.form-text{ style: "color: #bdbdbd;font-style: italic;" } Sign here
            %canvas
          .text-center.sign-with-mouse
            %small.text-muted
              Sign by holding the left mouse button down in the signature box.
              Press
              %strong Clear Signature
              to try again.
          .text-center.sign-with-finger
            %small.text-muted
              Sign using your finger in the signature box.
              Press
              %strong Clear Signature
              to try again.

        .signature-form-footer
          .row
            .col
              .d-none.d-md-block
                = render "consent/i_do_no_consent_button", size: "btn-lg"
              .d-block.d-md-none
                = render "consent/i_do_no_consent_button", size: ""
            .col
              .text-right
                .d-none.d-md-block
                  = render "consent/i_consent_button", size: "btn-lg"
                .d-block.d-md-none
                  = render "consent/i_consent_button", size: ""

