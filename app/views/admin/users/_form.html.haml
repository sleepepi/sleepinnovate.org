= form_with model: user, url: admin_user_path(user), local: true do |form|
  = render "forms/horizontal/text_field", form: form, object: user, key: :clinic
  = render "forms/horizontal/select", form: form, object: user, key: :biobank_status, options: User::BIOBANK_STATUS
  = render "forms/horizontal/check_box", form: form, object: user, key: :emails_enabled, help_text: "Deselecting will disable all emails for this user."
  = render "forms/horizontal/check_box", form: form, object: user, key: :tester, help_text: "Testers are not included in reports or exports."
  = render "forms/horizontal/submit", form: form, object: user, cancel: admin_user_path(user)
