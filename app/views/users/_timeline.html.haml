- current_event = user.current_event
- event_found = false
.d-flex.justify-content-around.align-items-center.flex-column.flex-md-row
  - Event.order(:month).each do |event|
    - unless event.month.zero?
      .event-timeline-arrow
        .text-center.d-none.d-md-block
          = icon("fas", "long-arrow-alt-right", class: "text-muted")
        .text-center.d-block.d-md-none
          = icon("fas", "long-arrow-alt-down", class: "text-muted")
    - if current_event == event
      - event_found = true
      .event-timeline.d-flex.flex-row.flex-md-column
        .mr-1.mr-md-0
          = icon("fas", "user", class: "text-primary")
        %div
          %span.badge.badge-primary= event.name
    - elsif event_found
      .event-timeline.d-flex.flex-row.flex-md-column
        .mr-1.mr-md-0
          = icon("far", "square")
        %div
          %span.badge.badge-secondary= event.name
    - else
      .event-timeline.d-flex.flex-row.flex-md-column
        .mr-1.mr-md-0
          = icon("fas", "check-square", class: "text-success")
        %div
          %span.badge.badge-success= event.name
