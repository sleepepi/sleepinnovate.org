.form-group.string-container
  .form-inline
    - case @json.dig("variable", "time_duration_format")
    - when "hh:mm:ss"
      = render "survey/decoration/hours", value: value
      \:
      = render "survey/decoration/minutes", value: value
      \:
      = render "survey/decoration/seconds", value: value
    - when "hh:mm"
      = render "survey/decoration/hours", value: value
      \:
      = render "survey/decoration/minutes", value: value
    - else # "mm:ss"
      = render "survey/decoration/minutes", value: value
      \:
      = render "survey/decoration/seconds", value: value

    = link_to "Clear", "#", data: { object: "clear-time-duration-input", target_name: "response", time_duration_format: @json.dig("variable", "time_duration_format") }, class: "btn btn-sm btn-link text-muted"

  = render "survey/decoration/errors"
  = render "survey/decoration/field_note"
