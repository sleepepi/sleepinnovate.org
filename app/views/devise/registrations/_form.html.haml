= form_with model: resource, url: user_registration_path, local: true do |form|
  = render "forms/vertical/text_field", form: form, object: resource, key: :full_name, placeholder: rand(2).zero? ? "John Smith" : "Jane Smith", autocomplete: "off", autocorrect: "off", autocapitalize: "none", spellcheck: "false"
  = render "forms/vertical/email_field", form: form, object: resource, key: :email, placeholder: "you@example.com"
  = render "forms/vertical/email_field", form: form, object: resource, key: :email_confirmation, placeholder: "you@example.com"

  - if RECAPTCHA_ENABLED
    .form-group
      %label.form-control-label Human Verification
      %div{ style: "height: 78px;margin-left: 27.5px" }
        .g-recaptcha{ data: { sitekey: ENV["recaptcha_site_key"] } }
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>

  .form-group.submit-btn-container
    = form.submit "Create Account", class: "btn btn-success btn-block"
