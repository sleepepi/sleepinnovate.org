.page-box.last-box.d-flex.flex-column.justify-content-center.background-p50-grey
  .container
    %p.lead.text-center Resend unlock instructions

    .sign-up-form
      .sign-up-form-title
        Unlock account

      = form_with model: resource, as: resource_name, url: unlock_path(resource_name), method: :post, local: true do |form|
        = render "forms/vertical/email_field", form: form, object: resource, key: :email

        - if resource.errors.any? && resource.errors.messages.keys.include?(:unlock_token) && false
          %small.form-text.text-danger
            Your unlock token has expired. Please enter an email to regenerate
            a new unlock token and URL.

        .form-group.submit-btn-container
          = form.submit "Resend unlock instructions", class: "btn btn-success btn-block"
