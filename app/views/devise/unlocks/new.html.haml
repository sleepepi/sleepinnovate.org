.page-box.last-slide.background-p50-grey
  .sign-up-form
    .sign-up-form-title
      Resend unlock instructions

    = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
      .form-group
        = render "layouts/label_or_errors", f: f, object: resource, key: :email
        = f.email_field :email, autofocus: true, class: "form-control form-control-danger", autocorrect: "off", autocapitalize: "none", spellcheck: "false"

      .form-group.submit-btn-container
        = f.submit "Resend unlock instructions", class: "btn btn-accent btn-block"

  .sign-up-form.text-center
    = render "devise/shared/links"
